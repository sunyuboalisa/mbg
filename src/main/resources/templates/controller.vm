        var count = ${modelNameLower}Service.upsert(${modelNameLower});
        return new Result<Integer>(count);
    }

    @PostMapping("/batch-upsert")
    public Result<Integer> batchUpsert(@RequestBody List<${modelName}> list) {
        var count = ${modelNameLower}Service.batchUpsert(list);
        return new Result<>(count);
    }

    @DeleteMapping("/batch-delete")
    public Result<Integer> batchDelete(@RequestBody List<${pkType}> ids) {
        var count = ${modelNameLower}Service.batchDelete(ids);
        return new Result<>(count);
    }
}